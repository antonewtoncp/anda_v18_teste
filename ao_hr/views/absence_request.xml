        <record id="absence_request_psi_tree_view" model="ir.ui.view">
            <field name="name">absence.request.psi.tree</field>
            <field name="model">absence.request.psi</field>
            <field name="arch" type="xml">
                <list string="Training Request">
                    <field name="employee_id"/>
                    <field name="department_boss"/>

                </list>
            </field>
        </record>

        <record id="absence_request_psi_search_view" model="ir.ui.view">
            <field name="name">absence.request.psi.search</field>
            <field name="model">absence.request.psi</field>
            <field name="arch" type="xml">
                <search string="Training Request">
                    <group expand="1" string="Group By">
                        <filter string="Employee" name="employee_id" domain="[]"
                                context="{'group_by':'employee_id'}"/>

                    </group>
                </search>
            </field>
        </record>

        <record id="absence_request_psi_act_window" model="ir.actions.act_window">
            <field name="name">Formulario de pedido de ausências</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">absence.request.psi</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cria aqui a sua ficha de pedido de ausências
                </p>
            </field>
        </record>


