<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_hr_irt_configuration_tree_view" model="ir.ui.view">
        <field name="name">hr.irt.config.tree</field>
        <field name="model">hr.irt.config</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <list string="Irt Configuration" editable="bottom">
                <field name="initial_value" required="1"/>
                <field name="final_value" required="1"/>
                <field name="fixed_portion" required="1"/>
                <field name="tax" required="1"/>
                <field name="excess" required="1"/>
                <field name="create_date" readonly="1"/>
                <field name="write_date" readonly="1"/>
            </list>

        </field>
    </record>

    <record id="action_hr_irt_configuration" model="ir.actions.act_window">
        <field name="name">IRT Configuration</field>
        <field name="res_model">hr.irt.config</field>
        <field name="view_type">form</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_hr_irt_configuration_tree_view"/>
    </record>
</odoo>