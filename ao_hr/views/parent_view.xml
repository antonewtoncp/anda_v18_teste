<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- father form, tree view -->
        <record id="ao_hr_vew_hr_father_form" model="ir.ui.view">
            <field name="name">hr.father.view</field>
            <field name="model">hr.father</field>
            <field name="priority" eval="1024"/>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Father Name..." colspan="8"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Info">
                            <group col="4">
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="email"/>
                            </group>
                        </page>
                        <page name="address_detail" string="Address Detail">
                            <label for="street" string="Address"/>
                            <div name="div_address">
                                <field name="street"
                                       placeholder="Street..."/>
                                <field name="street2"
                                       placeholder="Street2"/>
                                <div class="address_format">
                                    <field name="city"
                                           placeholder="City"
                                           style="width: 40%%"/>
                                    <field name="state_id"
                                           class="oe_no_button"
                                           placeholder="State"
                                           style="width: 37%%"
                                           options='{"no_open": True}'/>
                                    <field name="zip"
                                           placeholder="ZIP"
                                           style="width: 20%%"/>
                                </div>
                            </div>
                        </page>
                        <page name="child" string="Child(s)">
                            <field name="child_ids"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_hr_father_view">
            <field name="name">Father</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.father</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <record id="vew_hr_mother_form" model="ir.ui.view">
            <field name="name">hr.mother.view</field>
            <field name="model">hr.mother</field>
            <field name="priority" eval="1024"/>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Mother Name..." colspan="8"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Info">
                            <group col="4">
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="email"/>
                            </group>
                        </page>
                        <page name="address_detail" string="Address Detail">
                            <label for="street" string="Address"/>
                            <div name="div_address">
                                <field name="street"
                                       placeholder="Street..."/>
                                <field name="street2"
                                       placeholder="Street2"/>
                                <div class="address_format">
                                    <field name="city"
                                           placeholder="City"
                                           style="width: 40%%"/>
                                    <field name="state_id"
                                           class="oe_no_button"
                                           placeholder="State"
                                           style="width: 37%%"
                                           options='{"no_open": True}'/>
                                    <field name="zip"
                                           placeholder="ZIP"
                                           style="width: 20%%"/>
                                </div>
                            </div>

                        </page>
                        <page name="students" string="Students">
                            <field name="child_ids"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_hr_mother_view">
            <field name="name">Mother</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.mother</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
