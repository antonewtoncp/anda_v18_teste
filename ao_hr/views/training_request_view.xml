<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_training_request_form_view" model="ir.ui.view">
            <field name="name">hr.training.request.form</field>
            <field name="model">hr.training.request</field>
            <field name="arch" type="xml">
                <form string="Training Request">
                    <header>
                        <button name="button_employee_sign" attrs="{'invisible': [('employee_sign_date', '!=', False)]}"
                                string="Employee Sign" class="oe_highlight" type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h1>
                                <field name="employee_id" required="1" placeholder="Employee name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="mobile_phone"/>
                                <field name="request_by" required="1"/>
                            </group>
                            <group>
                                <field name="institution_address" required="1"/>
                                <field name="initials" required="1"/>
                                <field name="institution_phone" required="1"/>
                                <field name="institution_email" required="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="course_type" required="1"/>
                                <field name="course_amount" required="1"/>
                                <field name="payment_method" required="1" widget="radio" options="{'horizontal':true}"/>
                            </group>
                            <group>
                                <field name="employee_payment_amount" required="1"/>
                                <field name="course_start_date" required="1"/>
                                <field name="course_end_date" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="approvals" string="Approvals">
                                <group col="1">
                                    <field name="employee_sign_date" invisible="1"/>
                                    <field name="department_boss_id" invisible="1"/>
                                    <field name="resident_representative_id" invisible="1"/>
                                    <table class="table table-condensed table-sm">
                                        <tr>
                                            <td><label for="department_boss" readonly="1"/></td>
                                            <td><field name="department_boss" readonly="1"/></td>
                                            <td><label for="department_boss_date" readonly="1"/></td>
                                            <td><field name="department_boss_date" readonly="1"/></td>
                                            <td><button name="department_boss_approve" type="object" string="Approve"
                                                        attrs="{'invisible':[('department_boss_date', '!=', False)]}"/></td>
                                            <td><button name="department_boss_disapprove" type="object"
                                                        string="Disapprove"
                                                        attrs="{'invisible':[('department_boss_date', '!=', False)]}"/></td>
                                        </tr>
                                        <tr>
                                            <td><label for="hr_manager" readonly="1"/></td>
                                            <td><field name="hr_manager" readonly="1"/></td>
                                            <td><label for="hr_manager_date" readonly="1"/></td>
                                            <td><field name="hr_manager_date" readonly="1"/></td>
                                            <td><button name="hr_manager_approve" type="object" string="Approve"
                                                        attrs="{'invisible':[('hr_manager_date', '!=', False)]}"/></td>
                                            <td><button name="hr_manager_disapprove" type="object" string="Disapprove"
                                                        attrs="{'invisible':[('hr_manager_date', '!=', False)]}"/></td>
                                        </tr>
                                        <tr>
                                            <td><label for="resident_representative" readonly="1"/></td>
                                            <td><field name="resident_representative" readonly="1"/></td>
                                            <td><label for="resident_representative_date" readonly="1"/></td>
                                            <td><field name="resident_representative_date" readonly="1"/></td>
                                            <td>
                                                <button name="resident_approve" type="object" string="Approve"
                                                        attrs="{'invisible':[('resident_representative_date', '!=', False)]}"/>
                                            </td>
                                            <td>
                                                <button name="resident_disapprove" type="object" string="Disapprove"
                                                        attrs="{'invisible':[('resident_representative_date', '!=', False)]}"/>
                                            </td>
                                        </tr>
                                    </table>
                                </group>
                            </page>
                            <page string="Other Details">
                                <group>
                                    <span>Espaço reservado para o Sector de Contabilidade e Finanças</span>
                                    <field name="received_by"/>
                                    <field name="received_date"/>
                                    <field name="other_details"/>
                                </group>
                            </page>
                        </notebook>
                        <span>
                            <p>
                                <b>OBS:</b> A PSI poderá descontar 15% do valor da formação ou não, se o trabalhador
                                tiver
                                dividas (empréstimos, adiantamentos de salário, despesas de viajem não fechadas, etc,) o
                                seu pedido poderá ser suspenso até regularização das contas, a menos que seja autorizado
                                pela direção.
                            </p>
                            <p>

                                <b>Auto declaração:</b> Confirmo ter lido e aceite os critérios acima para pedido do
                                curso,
                                sendo que após aprovação do mesmo, concordo que seja feito o desconto de 15% do meu
                                salário. Em caso de abandono ou resultados negativos, autorizo também que seja
                                descontado 100% do meu salário global, bem como se desvincular num período inferior a 6
                                meses após findo curso, a empregadora (PSI) terá o direito de proceder uma pena de
                                reembolso sob o beneficiário no valor global do referido curso.
                            </p>
                        </span>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_training_request_tree_view" model="ir.ui.view">
            <field name="name">hr.training.request.tree</field>
            <field name="model">hr.training.request</field>
            <field name="arch" type="xml">
                <tree string="Training Request">
                    <field name="employee_id"/>
                    <field name="course_start_date"/>
                    <field name="course_end_date"/>
                </tree>
            </field>
        </record>

        <record id="hr_training_request_search_view" model="ir.ui.view">
            <field name="name">hr.training.request.search</field>
            <field name="model">hr.training.request</field>
            <field name="arch" type="xml">
                <search string="Training Request">
                    <group expand="1" string="Group By">
                        <filter string="Employee" name="employee_id" domain="[]"
                                context="{'group_by':'employee_id'}"/>
                        <field name="received_by"/>
                        <field name="request_by"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_training_request_act_window" model="ir.actions.act_window">
            <field name="name">Training Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.training.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no examples click here to add new Training Request.
                </p>
            </field>
        </record>

        <menuitem name="Ficha de pedido de formação" id="hr_training_request_menu" parent="ao_hr.menu_employee_ficha"
                  action="hr_training_request_act_window"/>

    </data>
</odoo>