<odoo>
    <data>

        <!-- View do wizard -->
        <record id="view_wizard_absence_map_form" model="ir.ui.view">
            <field name="name">wizard.absence.map.form</field>
            <field name="model">wizard.absence.map</field>
            <field name="arch" type="xml">
                <form string="Mapa de Ausência" version="7.0">
                    <group>
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="leave_type_id" placeholder="Todas"/>
                    </group>
                    <footer>
                        <button name="action_generate_report" type="object" string="Imprimir Mapa" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Ação do wizard (modal) -->
        <record id="action_wizard_absence_map" model="ir.actions.act_window">
            <field name="name">Mapa de Ausência</field>
            <field name="res_model">wizard.absence.map</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu apontando para a ação do wizard -->
        <menuitem
            id="menu_absence_map"
            name="Mapa de ausência"
            parent="hr_holidays.menu_hr_holidays_report"
            action="action_wizard_absence_map"
            sequence="30"
        />

    </data>
</odoo>
