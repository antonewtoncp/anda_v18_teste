<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_irt_view" model="ir.ui.view">
            <field name="name">wizard.irt.form</field>
            <field name="model">wizard.irt</field>
            <field name="arch" type="xml">
                <form>
                    <h3>Selecionar a folha de recibo de vencimento para imprimir o mapa de IRT , ou
                        data do recibo de vencimento para definir o intervalo de datas e imprimir o mapa.
                    </h3>
                    <br/>
                    <group>
                        <field name="group" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    <group>
                        <field name="slip_filter_by"/>
                    </group>
                    <group invisible="slip_filter_by in ('year','payslip_date',False)">
                        <field name="hr_payslip_run_id" options="{'no_quick_create': True, 'no_create_edit': True}"
                               required ="slip_filter_by=='payslip_batch'"/>
                    </group>
                    <group invisible="slip_filter_by in ('payslip_batch','year',False)">
                        <field name="start_date"
                                required ="slip_filter_by=='payslip_date'"/>
                        <field name="end_date"
                                required ="slip_filter_by=='payslip_date'"/>
                    </group>
                    <group invisible="slip_filter_by in ('payslip_date','payslip_batch',False)">
                        <field name="fiscal_year"
                                required="slip_filter_by=='year'"/>
                    </group>
                    <footer class="d-flex flex-row gap-3">
                        <button name="print_report" string="Print IRT Map"
                                type="object" class="oe_highlight"/>

                        <button string="Cancel Wizard" special="cancel" class="btn btn-danger"/>

                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_irt" model="ir.actions.act_window">
            <field name="name">Assistente do Mapa IRT</field>
            <field name="res_model">wizard.irt</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_irt_view"/>
            <field name="target">new</field>
        </record>

       <menuitem name="IRT Map" parent="hr_payroll.menu_hr_payroll_report" sequence="4"
                  action="action_hr_irt" id="menu_hr_reporting_irt" groups="hr_payroll.group_hr_payroll_user"/>
    </data>
</odoo>