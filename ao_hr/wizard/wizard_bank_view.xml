<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_hr_bank_view" model="ir.ui.view">
            <field name="name">wizard.bank.form</field>
            <field name="model">wizard.bank</field>
            <field name="priority" eval="1024"/>
            <field name="arch" type="xml">
                <form string="Bank Reporting" version="7.0">
                    <h3>
                        Selecionar a folha de recibo de vencimento para imprimir o mapa do Banco , ou
                        data do recibo de vencimento para definir o intervalo de datas e imprimir o mapa.
                    </h3>
                    <br/>
                    <field name="bank" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                    <group>
                        <field name="slip_filter_by"/>
                    </group>
                    <group invisible="slip_filter_by !='payslip_batch'">
                        <field name="hr_payslip_run_id" options="{'no_quick_create': True, 'no_create_edit': True}"
                                required="slip_filter_by=='payslip_batch'"
                               />
                    </group>
                    <group invisible="slip_filter_by!='payslip_date'">
                        <field name="start_date"
                                invisible="slip_filter_by!='payslip_date'"
                               />
                        <field name="end_date"
                                 invisible="slip_filter_by!='payslip_date'"
                               />
                    </group>
                    <footer>
                        <button name="print_report" string="Print Bank Report"
                                type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel Wizard" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_bank" model="ir.actions.act_window">
            <field name="name">Bank Report Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.bank</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Bank Map" parent="hr_payroll.menu_hr_payroll_report" sequence="5"
                  action="action_hr_bank" id="menu_hr_reporting_bank" groups="hr_payroll.group_hr_payroll_user"/>

    </data>
</openerp>