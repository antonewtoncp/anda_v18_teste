<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_salary_view" model="ir.ui.view">
            <field name="name">wizard.salary.form</field>
            <field name="model">wizard.salary</field>
            <field name="arch" type="xml">
                <form>
                    <h3>
                        Selecionar a folha de recibo de vencimento para imprimir o mapa de salários , ou
                        data do recibo de vencimento para definir o intervalo de datas e imprimir o mapa.
                    </h3>
                    <br/>
                    <group>
                        <field name="slip_filter_by"/>
                    </group>
                    <group invisible="slip_filter_by !='payslip_batch'">
                        <field name="hr_payslip_run_id" options="{'no_quick_create': True, 'no_create_edit': True}"
                               required="slip_filter_by=='payslip_batch'"/>
                    </group>
                    <group invisible="slip_filter_by !='payslip_date'">
                        <field name="start_date"
                               required="slip_filter_by=='payslip_date'"/>
                        <field name="end_date"
                               required="slip_filter_by=='payslip_date'"/>
                    </group>
                    <footer>
                        <button name="print_report" string="Print Salary Map"
                                type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel Wizard" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_salary" model="ir.actions.act_window">
            <field name="name">Assistente do Mapa de Salário</field>
            <field name="res_model">wizard.salary</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="ao_hr.view_hr_salary_view"/>
            <field name="target">new</field>
        </record>

       <menuitem name="Salary Map" parent="hr_payroll.menu_hr_payroll_report"
                  action="action_hr_salary" sequence="6" id="menu_hr_reporting_salary"/>


    </data>
</odoo>