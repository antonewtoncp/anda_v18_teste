<odoo>
    <data>
        <record id="action_contract_proposal_report" model="ir.actions.report">
            <field name="name">Proposta de Contrato</field>
            <field name="type">qweb-pdf</field>
            <field name="model">hr.applicant</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ao_hr.report_employee_contract_proposal_pdf</field>
            <field name="report_file">ao_hr.report_employee_contract_proposal_pdf</field>
            <field name="print_report_name">'Proposta de Contrato'</field>
        </record>
        <template id="report_employee_contract_proposal_pdf">
            <t t-call="web.html_container">
               <t t-foreach="docs" t-as="o">
                    <t t-call="web.internal_layout">
                        <style type="text/css">
                            body {
                                margin: 0;
                                padding: 0;
                                font-family: Arial, sans-serif;
                            }
                            .page {
                                width: 100%;
                                margin: -10px auto;
                                padding: 0 0cm; /* Margens à esquerda e à direita */
                                box-sizing: border-box;
                            }
                            table {
                                width: 100%;
                                border-collapse: collapse;
                                margin-bottom: 20px;
                            }
                            th{
                                padding: 8px;
                                text-align: center;
                                border-top:2px solid black;
                                border-bottom:2px solid black;
                                background-color: #f2f2f2;
                                font-weight: bold;
                            }

                            td{
                                border-bottom:2px solid black;
                            }

                            .title {
                                font-size: 18px;
                                font-weight: bold;
                            }
                            .signature-box {
                                border: 1px solid black;
                                padding: 10px;
                                margin-right: 10px !important;
                                margin-left: 20px !important;
                            }

                            .signature-box-1{
                                border: 1px solid black;
                                padding: 10px;
                                margin-right: 10px !important;
                                margin-left: 40px !important;
                            }

                            .footer {
                                padding: 10px 0;
                                position: fixed;
                                background-color: black;
                            }
                            header {
                                position: fixed;
                                color:white;
                                background-color: white;
                                text-align: center !important;
                                <!-- padding: 10px 0; -->
                                margin-top:0px !important;
                            }
                        </style>
                        <header>
                            
                            <!-- <div class="text-left">
                                <div class="text-left">
                                    <ul>
                                     <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)" style="max-height:60px;"  />
                                    </ul>

                                </div>
                            </div> -->
                            <!-- <div style="display: flex; align-items: center; justify-content: space-between;">
                                <div>
                                    <img t-if="o.company.logo" t-att-src="'data:image/png;base64,%s' % o.company.logo" style="max-height: 80px;" />
                                </div>
                                <div>
                                    <h2 style="margin: 0;">Central Business Solutions</h2>
                                    <h2 style="margin: 0;">Central Business Solutions</h2>
                                    <p style="margin: 0;">Proposta de Contrato</p>
                                </div>
                            </div> -->
                        </header>
                        <div class="text-left">
                             <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)" style="max-height:150px;"  />
                            <div>
                                <h3><span t-field="res_company.name"/></h3>
                                <p>Proposta de Contrato</p>
                            </div>
                        </div>
                        <br></br><br></br>
                        <br></br><br></br>
                        <br></br>

                    <div class="page">
                        
                        <table>
                            <thead>
                                <tr style="border-bottom:2px solid black;">
                                    <th>INFORMAÇÕES DA EMPRESA</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border-bottom:0px !important; padding-top:30px !important; padding-left:30px !important;">
                                        <!-- [<span t-field="ContractProposall.name"/>]  -->
                                        <p style="margin-top:8px !important;"> A Central Business Solutions Lda, é uma empresa Angolana, fundada a 15 de novembro de 2013, especializada na prestação de serviços de informática, suporte e desenvolvimento de software. </p>
                                        <p>
                                            <b style="margin-top: 4px !important;">Missão</b>
                                            Prestar serviços e oferecer produtos e soluções na área de informática que possam acrescentar valor aos nossos clientes e parceiros.
                                        </p>
                                        <p>
                                            <b style="margin-top: 4px !important;">Visão</b>
                                            Ser uma referência de excelência nacional e internacional em serviços informáticos.
                                        </p>
                                        <p>
                                            <b style="margin-top: 4px !important;">Valores</b>
                                            Eficiência. Rigor, Exatidão, Responsabilidade e Respeito pelo cliente.
                                        </p>
                                        <p>
                                            <b style="margin-top: 4px !important;">Objetivo</b>
                                            Aumentar a nossa estrutura física e tecnológica, firmar parceiros fortes e duradouros, adquirir certificações internacionais dos nossos produtos e serviços, crescer profissionalmente suportando-se em padrões internacionalmente aceitos, formação dos colaboradores.
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <table style="margin-top:10px!important; border-top:2px solid black;">
                            <thead>
                                <tr style="text-align:center !important; border-bottom:2px solid black;">
                                    <th> DADOS DO CANDIDATO</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border-bottom:0px !important; padding-top:30px !important; padding-left:30px !important;">
                                        <p>NOME: <span t-field="o.name"/></p>
                                        <p>NACIONALIDADE: <span t-field="o.nationality"/></p>
                                        <p>HABILITAÇÕES LITERÁRIAS: <span t-field="o.type_id"/></p>
                                        <p>ANOS DE EXPERIÊNCIA RELEVANTE A FUNÇÃO: <span t-field="o.experience_year_function"/></p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <table style="margin-top:10px!important; border-top:2px solid black;">
                            <thead>
                                <tr style="text-align:center !important; border-bottom:2px solid black;">
                                    <th> FUNÇÕES A OCUPAR</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border-bottom:0px !important; padding-top:30px !important; padding-left:30px !important;">
                                        <p>FUNÇÃO: <span t-field="o.job_id"/></p>
                                        <p>CATEGORIA: <span t-field="o.category"/></p>
                                        <p>REPORTE: <span t-field="o.report"/></p>
                                        <p>DATA DE INÍCIO: <span t-field="o.start_date"/></p>
                                        <p>TIPO DE CONTRATO: <span t-field="o.contract_type_id"/></p>
                                        <p>PERÍODO DE EXPERIÊNCIA: <span t-field="o.time_experience"/></p>
                                        <p>LOCAL DE TRABALHO: CBS SEDE, CONDOMÍNIO INTERLAND, MORRO BENTO, LUANDA, ANGOLA </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Proposta Salarial -->
                        <br></br><br></br><br></br>
                        <br></br>
                        <table style="margin-top:0px!important; border-top:2px solid black;">
                            <thead>
                                <tr style="text-align:center !important; border-bottom:2px solid black;">
                                    <th colspan="2" class="title">PROPOSTA SALARIAL</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="border-top: 2px solid black !important;">
                                    <td style="padding-left:15px !important;">SALÁRIO BRUTO</td>
                                    <td><span t-field="o.salary_proposed" t-options="{'widget': 'float', 'precision': 2}"/> AO</td>
                                </tr>
                                <tr style="border-top: 2px solid black !important;">
                                    <td style="padding-left:15px !important;">SUBISÍDIO DE ALIMENTAÇÃO</td>
                                    <td><span t-field="o.food_subsidy" t-options="{'widget': 'float', 'precision': 2}"/> AO</td>
                                </tr>
                                <tr style="border-top: 2px solid black !important;">
                                    <td style="padding-left:15px !important;">SUBISÍDIO DE TRANSPORTE</td>
                                    <td><span t-field="o.transport_subsidy" t-options="{'widget': 'float', 'precision': 2}"/> AO</td>
                                </tr>
                                <tr style="border-top: 2px solid black !important;">
                                    <td style="padding-left:15px !important;">SUBSĨDIO DE NATAL</td>
                                    <td><span t-field="o.christmas_allowance"/></td>
                                </tr>
                                <tr style="border-top: 2px solid black !important;">
                                    <td style="padding-left:15px !important;">SUBSÍDIO DE FÉRIAS</td>
                                    <td><span t-field="o.vacation_allowance"/></td>
                                </tr>
                                <tr style="border-top: 2px solid black !important;">
                                    <td style="padding-left:15px !important;">SEGURO DE ACIDENTE DE TRABALHO</td>
                                    <td>NOSSA SEGUROS</td>
                                </tr>
                                <tr style="border-top: 2px solid black !important; border-bottom: 2px solid black !important; margin-bottom:15px !important;">
                                    <td style="padding-left:15px !important;">SEGURO SAÚDE</td>
                                    <td>CONFORME POLÍTICA EM VIGOR NA <br></br>EMPRESA</td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Validade da Proposta -->
                        <table style="margin-top:20px!important; border-top:2px solid black;">
                            <thead>
                                <tr style="text-align:center !important; border-bottom:2px solid black;">
                                    <th> VALIDADE DA PROPOSTA</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border-bottom:0px !important;">
                                        <p style="margin-top:26px !important;margin-bottom:26px !important; padding-left:15px !important;"><b>Validade da proposta: 5 dias</b></p>
                                        <p style="margin-top:26px !important;margin-bottom:26px !important; padding-left:15px !important;">Luanda, <span t-esc="datetime.date.today().strftime('%d/%m/%Y')"/></p>
                                        <p style="margin: 0px !important; padding-left:15px !important;">Agradecemos o preenchimento e respetivo envio da resposta via e-mail pessoalmente:</p>
                                        <div class="signature-box">
                                            <p style="margin-top:16px !important;">Eu, <span style="border-bottom: 1px solid black; width: 650px; display: inline-block;"></span></p>
                                            Aceito a proposta de emprego nos termos e condições apresentadas <br></br>
                                            <p>
                                                SIM<span style="border-bottom: 1px solid black; width: 100px; display: inline-block;"></span>
                                                NÃO<span style="border-bottom: 1px solid black; width: 150px; display: inline-block;"></span>
                                            </p>
                                            Confirmo a minha disponibilidade para iniciar na data proposta:
                                            <p>
                                                SIM<span style="border-bottom: 1px solid black; width: 100px; display: inline-block;"></span>
                                                NÃO<span style="border-bottom: 1px solid black; width: 150px; display: inline-block;"></span>
                                            </p>
                                        </div>
                                        <div class="signature-box-1" style="margin-top:5px !important; height:90px!important;">
                                            <b>Assinatura e data</b>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
               </t>
               
            </t>
        </template>
    </data>
</odoo>