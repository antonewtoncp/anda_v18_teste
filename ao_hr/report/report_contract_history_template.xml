<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <template id="report_history_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <style type="text/css">
                            /* Adicione aqui os estilos personalizados para o relatório */
                            .container2 { /* Seu estilo */ }
                            .text-center { text-align: center; }
                            .text-left { text-align: left; }
                            .text-right { text-align: right; }
                            .conteudo { border-collapse: collapse; width: 100%; font-size: 12px; }
                            .conteudo > tr > th, .conteudo > tr > td { border: 1px solid #000; padding: 4px; }
                            hr { border: solid 1px #000; }
                            .borda { border-bottom: solid 1px #000; }
                            .borda_completa { border: solid 1px #000; }
                            .title { font-weight: bold; }
                            .no_border { border: none; }
                            .details { width: 600px; }
                            .right { float: right; }
                            .font_12 { font-size: 12px; }
                            .font_14 { font-size: 14px; }
                            .font_10 { font-size: 10px; }
                            .horizontal_line { border-bottom: 3px solid black; }
                        </style>
                        <div class="oe_structure">
                            <table class="table table-borderless">
                                <tr>
                                    <td>
                                        <div class="col-12">
                                            <div>
                                                <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)" style="max-height: 60px;" />
                                                <div>
                                                    <p class="m-0"><span t-field="res_company.name"/></p>
                                                    <p class="m-0"><span t-field="res_company.street"/> </p>
                                                    <p class="m-0"><span t-field="res_company.city"/> - <span t-field="res_company.country_id"/></p>
                                                    <p class="m-0"><span t-field="res_company.vat"/></p>
                                                    <p class="m-0"><span t-field="res_company.hr_phone"/></p>
                                                    <br/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-6">
                                                    <b style="font-size: 18px !important;">
                                                        Histórico do Funcionário <span t-field="o.contract_duration"/>
                                                    </b>
                                                </div>
                                            </div>
                                            <hr style="border-top: 2px solid black;"/>
                                            <table class="table table-condensed table-borderless">
                                                <tr>
                                                    <th>Data de início</th>
                                                    <td><span t-field="o.date_start"/></td>
                                                    <th>Data final</th>
                                                    <td><span t-field="o.date_end"/></td>
                                                    <th><strong>N.º Func.</strong></th>
                                                    <td><span t-esc="o.employee_id.employee_number and o.employee_id.employee_number.zfill(4) or ''"/></td>
                                                    <th><strong>Função</strong></th>
                                                    <td><span t-field="o.employee_id.job_id"/></td>
                                                </tr>
                                                <tr>
                                                    <th><strong>Período</strong></th>
                                                    <td><span t-field="o.contract_duration"/></td>
                                                    <th><strong>Nome</strong></th>
                                                    <td><span t-field="o.employee_id"/></td>
                                                    <th><strong>Categoria</strong></th>
                                                    <td><span t-esc="o.employee_id.category_ids[0].name"/></td>
                                                    <th><strong>Local de Trabalho</strong></th>
                                                    <td><span t-field="o.employee_id.work_location_id"/></td>
                                                </tr>
                                                <tr>
                                                    <th><strong>Nº INSS</strong></th>
                                                    <td><span t-field="o.employee_id.social_security"/></td>
                                                    <th><strong>Forma de Pagamento</strong></th>
                                                    <td><span t-field="o.employee_id.payment_method"/></td>
                                                    <th><strong>NIF</strong></th>
                                                    <td><span t-field="o.employee_id.fiscal_number"/></td>
                                                </tr>
                                            </table>
                        
                                            <p>Gerado por Odoo / <b>©COMPLLEXUS</b></p>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
