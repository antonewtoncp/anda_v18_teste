<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <report
                id="report_employee_extract"
                model="wizard.employee.extract"
                string="Extracto de Funcionário"
                name="ao_hr.report_employee_extract_pdf"
                file="ao_hr.report_employee_extract_pdf"
                report_type="qweb-pdf"/>

        <template id="report_employee_extract_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">

                            <style type="text/css">

                            .text-center {text-align:center;}
                            .text-left {text-align:left;}
                            .text-right {text-align:right;}
                            .conteudo
                            {
                            border-collapse: collapse;
                            width:100%; font-size:12px;
                            min-height:900px;
                            }
                            .conteudo > tr > th, td, th { min-width:12px; border: 1px solid white;
                            line-height: 1
                            vertical-align: top;
                            padding: 4px !important;
                            margin: 4px !important;;
                            }

                        </style>

                            <b align="center">
                                <h3>EXTRACTO DE SALÁRIO DO FUNCIONÁRIO</h3>
                            </b>
                            <br/>
                            <div class="col-xs-12">
                                <div>
                                    <b>Funcionário:</b>
                                    <span t-field="o.employee_id"/>
                                </div>
                                <div>
                                    <b>Data Impressão:</b> <span t-esc="time.strftime('%d-%m-%Y %H:%M:%S')"/>
                                </div>
                                <div>
                                    <b>Período: </b>
                                    <span t-field="o.start_date"/> à <span t-field="o.end_date"/>
                                </div>
                                <div>
                                    <b>Moeda: </b>
                                    <span t-field="o.employee_id.company_id.currency_id"/>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <br/>

                                <t t-set="total_salary_remuneration" t-value="0"/>
                                <t t-set="total_salary_paid" t-value="0"/>
                                <table class="table table-condensed conteudo border-collapse">
                                    <tr>
                                        <td colspan="7"
                                            style="font-weight:bold; background-color:#337AB7; color:#ffffff;">
                                            <center>DETALHES</center>
                                        </td>
                                    </tr>
                                    <tr style="font-size: 12px; font-weight:bold;">
                                        <th>Período</th>
                                        <th>Contracto</th>
                                        <th>Recibo nº</th>
                                        <th>Folha Ref.</th>
                                        <th>Salário Iliquido</th>
                                        <th>Salário Liquido</th>
                                    </tr>
                                    <t t-if="o.get_employee_payslip()">
                                        <tr style="font-size: 12px;" t-foreach="o.get_employee_payslip()" t-as="payslip">
                                            <td><span t-field="payslip.date_from"/> - <span
                                                    t-field="payslip.date_to"/></td>
                                            <td><span t-field="payslip.contract_id"/></td>
                                            <td><span t-field="payslip.number"/></td>
                                            <td><span t-field="payslip.payslip_run_id"/></td>
                                            <td align="right"><span t-field="payslip.total_remunerations" widget="monetary"/></td>
                                            <td align="right"><span t-field="payslip.total_paid" widget="monetary"/></td>
                                            <t t-set="total_salary_remuneration"
                                               t-value="total_salary_remuneration + payslip.total_remunerations"/>
                                            <t t-set="total_salary_paid"
                                               t-value="total_salary_paid + payslip.total_paid"/>
                                        </tr>
                                        <tr>
                                            <td style="border:0;" colspan="4"></td>
                                            <td style="font-size: 12px; font-weight:bold; text-align:right">
                                                <span t-esc="total_salary_remuneration"
                                                      t-esc-options='{"widget": "monetary","display_currency": "o.create_uid.company_id.currency_id"}'/>
                                            </td>
                                            <td style="font-size: 12px; font-weight:bold; text-align:right">
                                                <span t-esc="total_salary_paid"
                                                      t-esc-options='{"widget": "monetary","display_currency": "o.create_uid.company_id.currency_id"}'/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="not o.get_employee_payslip()">
                                        <tr>
                                            <td colspan="4">
                                                <p class="text-center"><b>Nenhum registo encontrado para este
                                                    periodo!!!</b></p>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>