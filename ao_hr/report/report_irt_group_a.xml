<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_irt">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="header" style="color: #0B74CE">
                    <div class="row b_color">
                        <div class="col-8">
                            <b><span class="text-left" t-field="res_company.name"/></b>
                        </div>
                        <div class="col-4">
                            <ul class="list-inline text-right">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                |
                                Pag. <span class="page"/>/<span class="topage"/>
                            </ul>
                        </div>
                    </div>
                    <hr style="display: block; height: 1px;
                            border: 0; border-top: 3px solid #0B74CE;
                            margin: 0; padding: 0;"/>
                    <div class="row mt16">
                        <div class="col-6">
                            <div align="left">
                                <b class="b_color" style="font-size: 12px">
                                    Folha de Salário a vigorar a partir de
                                    <span t-esc="period"/>
                                </b>
                            </div>
                        </div>
                        <div class="col-6">
                            <div align="right"><b class="b_color">Valores Expresso em <span
                                    t-esc="res_company.currency_id.symbol"/></b></div>
                        </div>
                    </div>
                    <br/>
                </div>
                <br/>
                <div class="page">
                    <style type="text/css">
                        * {padding-bottom: 0 !important;
                        padding-top: 0 !important;
                        margin-bottom: 0 !important;margin-top:0 !important; }
                        hr {
                        display: block; height: 1px;
                        border: 0; border-top: 1px solid #0B74CE;
                        margin: 0; padding: 0;
                        }
                        .b_color{
                        color: #0B74CE;
                        }
                        .border_bottom {border-bottom: solid black 1px;}

                        table {
                        border-spacing: 3px;
                        border-top: 3px solid black;
                        border-collapse:collapse;
                        font-size:10px;
                        }

                        td {
                        border-bottom:0 !important;
                        border-top: 1px solid #B2BABB !important;
                        }

                        th {
                        border-top:0 !important;
                        border-bottom: 1px solid #B2BABB !important;
                        }

                        table, tr, th, td {
                        border-collapse: separate;
                        padding:0px !important;
                        }

                        .border_top_th{
                        border-top: 1px solid black !important;
                        }
                    </style>
                    <div class="row">
                        <div class="col-6">
                            <table class="table table-sm o_main_table" style="border-top: 0px;">
                                <tr>
                                    <th style="border: 0 !important">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
                                             style="max-height: 60px;"/>

                                        <p>
                                            <span t-field="res_company.name"/>
                                        </p>
                                        <p>
                                            <span t-field="res_company.street"/>,<br/>
                                            <span t-field="res_company.city"/>-
                                            <span t-field="res_company.country_id"/>
                                        </p>
                                        <p>
                                            Contibuinte Fiscal nº
                                            <span t-field="res_company.vat"/>
                                        </p>
                                        <p>
                                            <span t-field="res_company.hr_phone"/>
                                        </p>
                                    </th>
                                </tr>
                            </table>
                        </div>
                        <div class="col-4">
                            <table class="table table-sm o_main_table" style="border-top: 0px;">
                                <tr style="color: #0B74CE">
                                    <td colspan="2" style="font-size:18px; border:0px !important;">
                                        <h4 t-if="irt_group == 'group_a'">
                                            <b>Modelo II do IRT Grupo A</b>
                                        </h4>
                                        <h4 t-if="irt_group == 'group_bc'">
                                            <b>Modelo II do IRT Grupo B - C</b>
                                        </h4>
                                        <h4>
                                            <t t-if="slip_filter == 'year'">
                                                <b> Ano Fiscal <t t-esc="fiscal_year"/></b>
                                            </t>
                                            <t t-if="slip_filter == 'payslip_batch'">
                                                <b>Folha de Vencimento <t t-esc="slip_run.name"/></b>
                                            </t>

                                            <t t-if="slip_filter == 'payslip_date'">
                                                De:
                                                <t t-esc="date['start']"/>
                                                Até:
                                                <t t-esc="date['end']"/>
                                            </t>
                                        </h4>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-2"></div>
                    </div>
                    <br/>
                    <br/>
                    <div name="table_irt_line" class="row">
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th rowspan="2">Nº</th>
                                    <th colspan="4" class="text-center"
                                        style="border-bottom: 1px solid black !important;">
                                        Dados do Colaborador
                                    </th>
                                    <th colspan="3" class="text-center"
                                        style="border-bottom: 1px solid black !important;">
                                        Rendimentos
                                    </th>
                                    <th rowspan="2" class="text-right">Imposto Pago</th>
                                </tr>
                                <tr>
                                    <th style="width:270px;" class="text-center">Nome</th>
                                    <th class="text-center" style="width:200px;">Morada</th>
                                    <th class="text-center">Nº de Contribuinte</th>
                                    <th class="text-center">Nº Segurança Social</th>
                                    <th class="text-right">Sujeitos(1)</th>
                                    <th class="text-right">Não Sujeitos(2)</th>
                                    <th class="text-right">Isentos(3)</th>
                                </tr>
                            </thead>
                            <tbody>

                                <t t-set="total_exempt" t-value="0"/>
                                <t t-set="total_subject" t-value="0"/>
                                <t t-set="total_no_subject" t-value="0"/>
                                <t t-set="total_tax" t-value="0"/>

                                <t t-set="count" t-value="1"/>
                                <tr t-foreach="contracts" t-as="o">
                                    <td>
                                        <t t-esc="count"/>
                                        <t t-set="count" t-value="count + 1"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="o.employee_id"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="o.employee_id.address_home_id.street"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="o.employee_id.fiscal_number"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="o.employee_id.social_security"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="formatLang(env, data[o.id][0]['subject'])"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="formatLang(env, data[o.id][0]['no_subject'])"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="formatLang(env, data[o.id][0]['exempt'])"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="formatLang(env, data[o.id][0]['tax'])"/>
                                    </td>
                                    <t t-set="total_subject" t-value="total_subject + data[o.id][0]['subject']"/>
                                    <t t-set="total_no_subject"
                                       t-value="total_no_subject + data[o.id][0]['no_subject']"/>
                                    <t t-set="total_exempt" t-value="total_exempt + data[o.id][0]['exempt']"/>
                                    <t t-set="total_tax" t-value="total_tax + data[o.id][0]['tax']"/>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr style="background-color:#2ec18b; font-weight:bold;">
                                    <td class="text-right" colspan="5">Totais</td>
                                    <td class="text-right">
                                        <b t-if="total_subject is None"><span t-esc="formatLang(env, 0.0)"/></b>
                                        <b t-if="total_subject"><span t-esc="formatLang(env, total_subject)"/></b>
                                    </td>
                                    <td class="text-right">
                                        <b t-if="total_subject is None"><span t-esc="formatLang(env, 0.0)"/></b>
                                        <b t-if="total_no_subject"><span t-esc="formatLang(env, total_no_subject)"/></b>
                                    </td>
                                    <td class="text-right">
                                        <b t-if="total_subject is None"><span t-esc="formatLang(env, 0.0)"/></b>
                                        <b t-if="total_exempt"><span t-esc="formatLang(env, total_exempt)"/></b>
                                    </td>
                                    <td class="text-right">
                                        <b t-if="total_tax is None"><span t-esc="formatLang(env, 0.0)"/></b>
                                        <b t-if="total_tax"><span t-esc="formatLang(env, total_tax)"/></b>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <br/>
                    <div name="description_irt" style="font-size:12px">
                        <p>
                            <b>(1) Valores sujeitos a tributação em sede de IRT.</b>
                        </p>
                        <p>
                            <b>(2) Valor afecto ao Salário Base correspondente ao desconto de Segurança Social</b>
                        </p>
                        <p>
                            <b>
                                (3) Valores de subsideos sujeitos a retenção mas isentos por estarem abaixo do
                                limite
                                de isenção
                            </b>
                        </p>
                    </div>
                    <br/>
                    <div name="assign_name" class="row">
                        <div class="col-4" style="font-size:12px !important;" t-if="slip_filter != 'year'">
                            <p align="center">Processado por</p>
                            <p align="center" class="mt-2">___________________________________</p>
                            <p align="center" class="mt-3">
                                <span t-field="slip_run.create_uid"/>
                            </p>
                        </div>
                        <div class="col-4" style="font-size:12px !important;">
                            <p align="center">O(A) Responsável do RH</p>
                            <p align="center" class="mt-2">___________________________________</p>
                            <p align="center" class="mt-3">
                                <span t-field="res_company.hr_manager"/>
                            </p>
                        </div>
                        <div class="col-4" style="font-size:12px !important;">
                            <p align="center">O(A) Director(a) Geral</p>
                            <p align="center" class="mt-2">___________________________________</p>
                            <p align="center" class="mt-3">
                                <span t-field="res_company.hr_general_manager"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <div class="text-right" style="font-size:10px">
                        <b>©COMPLLEXUS</b>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
