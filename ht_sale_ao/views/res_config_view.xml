<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Configuração para as Vendas -->
        <record id="view_sale_res_config_settings_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='connectors_setting_container']"
                       position="inside">
                    <h2>Centro de Custo</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="sale_cost_center"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Gerir centro de custo"
                                       for="sale_cost_center"/>
                                <div class="text-muted">
                                    Gerencie o centro de custo em suas
                                    <b>vendas</b>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>