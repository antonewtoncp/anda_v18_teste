<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_order_inherit_form" model="ir.ui.view">
            <field name="name">sale.order.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="has_cost_center" invisible="1"/>
                    <field name="cost_center" options="{'no_create': True, 'no_open': True}" required="has_cost_center!=False" invisible="has_cost_center==False" readonly="state!='draft'" />
                </xpath>
                <!-- <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="after">
                    <group class="oe_subtotal_footer">
                        <field name="amount_wth_apply"/>
                        <field name="amount_total_wth" />
                    </group>
                </xpath> -->
            </field>
        </record>
    </data>
</odoo>