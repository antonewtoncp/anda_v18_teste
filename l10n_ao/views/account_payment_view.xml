<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_register_form" model="ir.ui.view">
            <field name="name">account.payment.register.invoice.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='amount_div']" position="after">
                    <field name="deductible_wth" invisible="not partner_deductible_vat or partner_deductible_vat == 'none'"/>
                    <field name="deductible_vat" invisible="not partner_deductible_vat or partner_deductible_vat == 'none'" />
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="before">
                    <field name="partner_deductible_vat" />
                </xpath>
            </field>
        </record>

        <record id="view_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment.invoice.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='amount_div']" position="after">
                    <label for="deductible_wth" invisible="deductible_wth == 0"/>
                    <div class="o_row" invisible="deductible_wth == 0" name="wht_div">
                        <field name="deductible_wth" readonly="state != 'draft'"/>
                    </div>
                    <label for="deductible_vat" invisible="deductible_vat == 0"/>
                    <div class="o_row" invisible="deductible_vat == 0" name="vat_div">
                        <field name="deductible_vat" readonly="state != 'draft'"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="partner_deductible_vat" readonly="state != 'draft'"/>
                </xpath>
                <xpath expr="//sheet" position="inside">
                    <group invisible="deductible_wth == 0">
                        <div class="alert alert-warning" role="alert">
                            <span>
                                <h2>
                                    Aviso!
                                </h2>
                                <div class="o_row">
                                    Uma ou mais faturas foram sujeitas a retenção de
                                    <field name="deductible_wth" nolabel="1" readonly="state != 'draft'"/>
                                </div>
                            </span>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
