<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_ao_account_tax_form">
            <field name="name">account.tax.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_type']" position="after">
                    <field name="threshold_wht" invisible="tax_exigibility !='withholding'" />
                </xpath>
                <xpath expr="//field[@name='tax_scope']" position="after">
                    <field name="tax_exigibility" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>