<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_move_form_inherit_account" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="after">
                <group invisible="amount_wth_apply == 0">
                    <field name="amount_wth_apply"/>
                    <field name="amount_total_wth" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>