        <record id="view_saf_t_ao_tree" model="ir.ui.view">
            <field name="name">saf_t.ao.tree</field>
            <field name="model">saf_t.ao</field>
            <field name="arch" type="xml">
                <list create="false" edit="false">
                    <field name="name"/>
                    <field name="fiscal_year"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="file_type"/>
                    <field name="company_id"/>
                    <field name="user_id" string="Responsible"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_saf_t_ao_search" model="ir.ui.view">
            <field name="name">saf_t.ao.search</field>
            <field name="model">saf_t.ao</field>
            <field name="arch" type="xml">
                <search string="SAF-T file">
                    <field name="header_comment"/>
                    <field name="audit_file_version"/>
                    <field name="create_date"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="fiscal_year"/>
                    <field name="file_type"/>
                    <field name="user_id"/>
                    <field name="state"/>
                    <filter name="draft" string="Draft" domain="[('state','=','new')]"/>
                    <filter name="sent" string="Sent" domain="[('state','=','sent')]"/>
                    <group expand="0" string="Group By">
                        <filter name="Data_Start" string="Date Start" domain="[]"
                                context="{'group_by':'start_date'}"
                                help="Group Files for date end"/>
                        <filter name="Data_End" string="Date End" domain="[]"
                                context="{'group_by':'end_date'}"
                                help="Group Files for state"/>
                        <filter name="State" string="State" domain="[]"
                                context="{'group_by':'state'}"/>
                        <filter name="Company" string="Company" domain="[]"
                                context="{'group_by':'company_id'}"/>
                        <filter name="File XML Type" string="File XML Type" domain="[]"
                                context="{'group_by':'file_type'}" help="Files for File XML Type"/>
                    </group>
                    <separator/>
                    <!--<filter name="P" string="Facturação parcial"domain="[('file_type','=','P')]"/>-->
                    <filter name="I" string="Contablidade integrada com facturação"
                            domain="[('file_type','=','I')]"/>
                    <filter name="C" string="Contablidade" domain="[('file_type','=','C')]"/>
                    <filter name="F" string="Facturação" domain="[('file_type','=','F')]"/>
                    <!--<filter name="S" string="Autofacturação" domain="[('file_type','=','S')]"/>-->
                    <filter name="R" string="Recibos"
                            domain="[('file_type','=','R')]"/>
                    <filter name="A" string="Aquisição de bens e serviços"
                            domain="[('file_type','=','A')]"/>
                    <filter name="Q" string="Aquisição de bens e serviços integrada com a facturação"
                            domain="[('file_type','=','Q')]"/>
                </search>
            </field>
        </record>

