<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_saf_t_account_tax_form" model="ir.ui.view">
            <field name="name">account.tax.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="SAFT">
                        <group>
                            <group>
                                <field name="tax_type"/>
                                <field name="tax_code"/>
                                <field name="tax_type_with"
                                       invisible="tax_exigibility!='withholding'"
                                       required="tax_exigibility=='withholding'" groups="account.group_account_readonly"
                                />
                            </group>
                            <group>
                                <field name="country_region"/>
                                <field name="expiration_date"/>
                                <field name="exemption_reason" required="tax_code=='ISE'"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
