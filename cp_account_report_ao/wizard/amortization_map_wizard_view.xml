<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="amortization_map_wizard_form_view" model="ir.ui.view">
            <field name="name">amortization.map.wizard.form</field>
            <field name="model">amortization.map.wizard</field>
            <field name="arch" type="xml">
                <form string="Captive Vat">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                MAPA DE AMORTIZAÇÕES
                            </h1>
                        </div>
                        <group>
                            <field name="company_id" options="{'no_open': True, 'no_create': True}" readonly="1"/>
                            <field name="accounting_year" options="{'no_open': True, 'no_create': True}" readonly="0"/>
                        </group>
                        <group>
                            <group>
                                <field name="date_from" required="1"/>
                            </group>
                            <group>
                                <field name="date_to" required="1"/>
                            </group>
                            <group>
                                <field name="nature_assets"/>
                                <field invisible="nature_assets != 'other'" name="other_nature_assets" required="nature_assets == 'other'"/>
                                <field name="other_constants"/>
                                <field invisible="other_constants != 'other'" name="other_description_constants" required="other_constants == 'other'"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <span groups="base.group_user">
                            <button class="oe_highlight" name="print" string="print" type="object"/>
                            <button class="btn btn-danger" special="cancel" string="Cancel"/>
                        </span>
                    </footer>
                </form></field>
        </record>
        <record id="amortization_map_act_window" model="ir.actions.act_window">
            <field name="name">Mapa de Amortizações</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">amortization.map.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem action="amortization_map_act_window" id="menu_amortization_map" name="Mapa de Amortizações" parent="account_pdf_reports_menu" sequence="8"/>
    </data>
</odoo>
