<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="balance_notes_wizard_form" model="ir.ui.view">
            <field name="name">balance.notes.wizard.form</field>
            <field name="model">balance.notes.wizard</field>
            <field name="arch" type="xml">
                <form string="Notas ao Balanço">
                    <sheet>
                        <group>
                            <field name="company_id" required="1"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="accounting_year" required="1"
                                   options="{'no_open': True, 'no_create': True}"/>
                        </group>
                        <group col="4" colspan="2">
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                        <group col="4" colspan="2">
                            <field name="enable_filter" invisible="1"/>
                            <field name="target_move" widget="radio"/>
                             <field name="type"/>
                        </group>

                    </sheet>
                    <footer>
                        <button name="print" type="object" string="Print" class="oe_highlight"/>
                        ou
                        <button string="Cancel" special="cancel"  class="btn btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="balance_notes_wizard_action" model="ir.actions.act_window">
            <field name="name">Notas ao Balanço</field>
            <field name="res_model">balance.notes.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_balance_notes"
                  name="Notas"
                  action="balance_notes_wizard_action"
                  parent="account_pdf_reports_menu"
                  sequence="26"/>
    </data>
</odoo>