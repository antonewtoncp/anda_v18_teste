<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_order_inherit_form" model="ir.ui.view">
            <field name="name">purchase.order.inherit.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="has_cost_center" invisible="1"/>
                    <field name="cost_center" options="{'no_create': True, 'no_open': True}"
                           required="has_cost_center!=False"
                           invisible="has_cost_center==False"
                           readonly="state !='draft'"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>