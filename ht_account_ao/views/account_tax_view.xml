<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_ao_account_tax_form" >
            <field name="name">account.tax.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <field name="amount_type" position="after">
                    <field name="tax_on"/>
                    <field name="threshold_wht"
                           invisible="tax_on!='withholding'"
                        />
                </field>
                <field name="refund_account_id" position="after">
                    <field name="expense_account_id"
                           invisible="tax_on!='payment'"
                           required="tax_on=='payment'"
                       />
                </field>
            </field>
        </record>
    </data>
</odoo>